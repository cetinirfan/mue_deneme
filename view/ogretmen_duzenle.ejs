<%- include('./src/header'); %>
<%- include('./src/headerbar'); %>
        <div id="content" class="main-content">
            <div class="container">
                <div class="container">
                    <div class="row layout-top-spacing">
                        <div class="col-lg-12 col-12 layout-spacing">
                            <div class="statbox widget box box-shadow">
                                <div class="widget-header">                                
                                    <div class="row">
                                        <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                            <h4>Öğretmen Düzenle</h4>
                                        </div>
                                    </div>
                                </div>
                                    <form action='../../../yonetim/ogretmen_duzenle/<%=find_ogretmen._id%>' method='POST'>
                                        <div class="form-group mb-4">
                                            <label for="fullName">Adı Soyadı</label>
                                            <input type="text" name="fullName" class="form-control" id="fullName" value='<%= find_ogretmen.fullName%>' placeholder="Ad Soyad Giriniz...">
                                        </div>
                                        <div class="form-group mb-4">
                                            <label for="mail">E-Posta Adresi</label>
                                            <input type="email" name="mail" class="form-control" id="mail" value='<%= find_ogretmen.mail%>' placeholder="E-Posta Adresi Giriniz...">
                                        </div>
                                        <div class="form-group mb-4">
                                            <label for="telephone">Telefon No</label>
                                            <input type="text" name="telephone" class="form-control" id="telephone" value='<%= find_ogretmen.telephone%>' placeholder="Telefon No Giriniz...">
                                        </div>
                                        <button type="submit" name="action" class="mt-4 mb-4 btn btn-primary">KAYDET</button>
                                    </form>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
<%- include('./src/footer'); %> 