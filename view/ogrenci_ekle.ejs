<%- include('./src/header'); %>
<%- include('./src/headerbar'); %>
        <div id="content" class="main-content">
            <div class="container">
                <div class="container">
                    <div class="row layout-top-spacing">
                        <div class="col-lg-12 col-12 layout-spacing">
                            <div class="statbox widget box box-shadow">
                                <div class="widget-header">                                
                                    <div class="row">
                                        <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                            <h4>Öğrenci Ekle</h4>
                                        </div>
                                    </div>
                                </div>
                                <% if (message.length > 0 ) { %>
                                    <div class="<%= message[1] %>"  role="alert"> 
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x close" data-dismiss="alert"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></button>
                                        <%= message[0] %> 
                                    </div>
                                <% } %>
                                    <form action='/yonetim/ogrenci_ekle/' method='POST'>
                                        <div class="form-group mb-4">
                                            <label for="fullName">Adı Soyadı</label>
                                            <input type="text" name="fullName" class="form-control" id="fullName" placeholder="Ad Soyad Giriniz...">
                                        </div>
                                        <div class="form-group mb-4">
                                            <label for="no">Öğrenci No</label>
                                            <input type="text" name="no" class="form-control" id="no" placeholder="Öğrenci No Giriniz...">
                                        </div>
                                        <div class="form-group mb-4">
                                            <label for="telephone">Telefon No</label>
                                            <input type="text" name="telephone" class="form-control" id="telephone" placeholder="Telefon No Giriniz...">
                                        </div>
                                        <div class="form-group mb-4">
                                            <label for="tc">T.C No</label>
                                            <input type="text" name="tc" class="form-control" id="tc" placeholder="T.C No Giriniz...">
                                        </div>
                                        <div class="form-group mb-4">
                                            <label for="exampleFormControlSelect1">Alanı</label>
                                            <select name='classType' class="form-control" id="exampleFormControlSelect1">
                                                <option value='Belirtilmedi'>Belirtilmedi</option>
                                                <option value='Sayısal'>Sayısal</option>
                                                <option value='Sözel'>Sözel</option>
                                                <option value='Eşit Ağırlık'>Eşit Ağırlık</option>
                                            </select>
                                        </div>
                                        <div class="form-group mb-4">
                                            <label for="exampleFormControlSelect1">Sınıfı</label>
                                            <select name='className' class="form-control" id="exampleFormControlSelect1">
                                                <option value=''>Belirtilmedi</option>
                                                <% find_sinif.forEach(function(sinif){ %>
                                                <option value='<%= sinif.name %>'><%= sinif.name %></option>
                                                <% }); %> 
                                            </select>
                                        </div>
                                        <button type="submit" name="action" class="mt-4 mb-4 btn btn-primary">KAYDET</button>
                                    </form>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
<%- include('./src/footer'); %> 