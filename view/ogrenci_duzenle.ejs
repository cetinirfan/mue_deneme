<%- include('./src/header'); %>
<%- include('./src/headerbar'); %>
        <div id="content" class="main-content">
            <div class="container">
                <div class="container">
                    <div class="row layout-top-spacing">
                        <div class="col-lg-12 col-12 layout-spacing">
                            <div class="statbox widget box box-shadow">
                                <div class="widget-header">                                
                                    <div class="row">
                                        <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                            <h4>Öğrenci Düzenle</h4>
                                        </div>
                                    </div>
                                </div>
                                    <form action='../../../yonetim/ogrenci_duzenle/<%=find_ogrenci._id%>' method='POST'>
                                        <div class="form-group mb-4">
                                            <label for="fullName">Adı Soyadı</label>
                                            <input type="text" name="fullName" class="form-control" id="fullName" value='<%= find_ogrenci.fullName%>' placeholder="Ad Soyad Giriniz...">
                                        </div>
                                        <div class="form-group mb-4">
                                            <label for="no">Okul No</label>
                                            <input type="text" name="no" class="form-control" id="no" value='<%= find_ogrenci.no%>' placeholder="Okul No Giriniz...">
                                        </div>
                                        <div class="form-group mb-4">
                                            <label for="telephone">Telefon No</label>
                                            <input type="text" name="telephone" class="form-control" id="telephone" value='<%= find_ogrenci.telephone%>' placeholder="Telefon No Giriniz...">
                                        </div>
                                        <div class="form-group mb-4">
                                            <label for="tc">T.C No</label>
                                            <input type="text" name="tc" class="form-control" id="tc" value='<%= find_ogrenci.tc%>' placeholder="Telefon No Giriniz...">
                                        </div>
                                        <div class="form-group mb-4">
                                            <label for="exampleFormControlSelect1">Alanı</label>
                                            <select   name='classType' class="form-control" id="exampleFormControlSelect1">
                                                <option value='<%= find_ogrenci.classType%>'><%= find_ogrenci.classType%></option>
                                                <option value='Sayısal'>Sayısal</option>
                                                <option value='Sözel'>Sözel</option>
                                                <option value='Eşit Ağırlık'>Eşit Ağırlık</option>
                                            </select>
                                        </div>
                                        <div class="form-group mb-4">
                                            <label for="exampleFormControlSelect1">Sınıfı</label>
                                            <select name='className' class="form-control" id="exampleFormControlSelect1">
                                                <option value='<%= find_ogrenci.className%>'><%= find_ogrenci.className%></option>
                                                <% find_sinif.forEach(function(sinif){ %>
                                                <option value='<%= sinif.name %>'><%= sinif.name %></option>
                                                <% }); %> 
                                            </select>
                                        </div>
                                        <button type="submit" name="action" class="mt-4 mb-4 btn btn-primary">KAYDET</button>
                                    </form>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
<%- include('./src/footer'); %> 